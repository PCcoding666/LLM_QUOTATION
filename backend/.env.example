# 应用配置
APP_NAME=报价侠系统
APP_VERSION=1.0.0
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# 数据库配置 - PostgreSQL
# 格式: postgresql+asyncpg://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/quote_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis配置
# 格式: redis://[:密码@]主机:端口/数据库号
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# 百炼API配置 (阿里云DashScope)
DASHSCOPE_API_KEY=your_dashscope_api_key
BAILIAN_MODEL=qwen-max

# 阿里云OSS配置
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com
OSS_BUCKET_NAME=your_bucket_name

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS配置 (多个用逗号分隔)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# 爬虫配置
CRAWLER_USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)
CRAWLER_DELAY=2
CRAWLER_CONCURRENT_REQUESTS=5

# 编排服务配置
AGENTGO_API_KEY=

# 限流配置
RATE_LIMIT_PER_IP=100
RATE_LIMIT_WINDOW=60
